<Bindings>
  <Layer name="SI_KEYBINDINGS_LAYER_USER_INTERFACE_SHORTCUTS">
    <Category name="SI_KEYBINDINGS_CATEGORY_ESO_PROFILER">
      <Action name="ESO_PROFILER_TOGGLE">
        <Down>return ZO_KeybindStrip_HandleKeybindDown(keybind)</Down>
      </Action>
      <Action name="ESO_PROFILER_PROFILE_UI_LOAD">
        <Down>return ZO_KeybindStrip_HandleKeybindDown(keybind)</Down>
      </Action>
    </Category>
  </Layer>
  <Layer name="SI_KEYBINDINGS_LAYER_GENERAL">
    <Category name="SI_KEYBINDINGS_CATEGORY_USER_INTERFACE">
      <Action name="ESO_PROFILER_TOGGLE_GLOBAL" inheritsBindFrom="ESO_PROFILER_TOGGLE" hideAction="true">
        <Down>if ESO_PROFILER.profiling then StopScriptProfiler() else StartScriptProfiler() end</Down>
      </Action>
    </Category>
  </Layer>
</Bindings>
