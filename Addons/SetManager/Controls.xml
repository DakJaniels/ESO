<GuiXml>
  <Controls>
    <Button name="SetManager_ItemSlot" virtual="true">
      <Dimensions x="40" y="40" />

      <Textures mouseOver="EsoUI/Art/ActionBar/actionBar_mouseOver.dds" pressedMouseOver="EsoUI/Art/ActionBar/actionBar_mouseOver.dds" pressed="EsoUI/Art/ActionBar/actionBar_mouseOver.dds" />
      <Controls>
        <Texture name="$(parent)Icon" level="2">
          <Anchor point="TOPLEFT" />
          <Anchor point="BOTTOMRIGHT" />
        </Texture>
      </Controls>
    </Button>

    <Control name="SetManager_Character_Template" mouseEnabled="true" hidden="true" virtual="true">
      <Dimensions x="160" y="532"/>
      <Anchor point="CENTER" />

      <OnInitialized>
        SET_MANAGER:InitializeSlots(self)
      </OnInitialized>

      <Controls>
        <Texture name="$(parent)ApparelSection" inherits="ZO_CharacterSheetDivider">
          <Anchor point="TOPLEFT" offsetY="5" />
          <OnInitialized>
            self:GetNamedChild("Text"):SetText(GetString("SI_EQUIPSLOTVISUALCATEGORY", EQUIP_SLOT_VISUAL_CATEGORY_APPAREL))
          </OnInitialized>
        </Texture>

        <Label name="$(parent)ApparelHidden" font="ZoFontHeader" modifyTextType="UPPERCASE" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_SELECTED">
          <Anchor point="TOPLEFT" relativeTo="$(parent)ApparelSectionText" relativePoint="TOPRIGHT" offsetX="5" />
        </Label>

        <Button name="$(parent)EquipmentSlotsHead" inherits="SetManager_ItemSlot">
          <Anchor point="TOP" relativePoint="TOPLEFT" offsetX="87" offsetY="45" />
        </Button>

        <Texture name="$(parent)PaperDoll">
          <Dimensions x="64" y="256" />
          <Anchor point="TOP" relativeTo="$(parent)EquipmentSlotsHead" relativePoint="BOTTOM" offsetY="6" />
        </Texture>

        <!-- left side -->
        <Button name="$(parent)EquipmentSlotsShoulder" inherits="SetManager_ItemSlot">
          <Anchor point="TOPLEFT" offsetX="10" offsetY="101" />
        </Button>
        <Button name="$(parent)EquipmentSlotsGlove" inherits="SetManager_ItemSlot">
          <Anchor point="TOP" relativeTo="$(parent)EquipmentSlotsShoulder" relativePoint="BOTTOM" offsetY="10" />
        </Button>
        <Button name="$(parent)EquipmentSlotsLeg" inherits="SetManager_ItemSlot">
          <Anchor point="TOP" relativeTo="$(parent)EquipmentSlotsGlove" relativePoint="BOTTOM" offsetY="10" />
        </Button>

        <!-- right side -->
        <Button name="$(parent)EquipmentSlotsChest" inherits="SetManager_ItemSlot">
          <Anchor point="TOPLEFT" offsetX="124" offsetY="101" />
        </Button>
        <Button name="$(parent)EquipmentSlotsBelt" inherits="SetManager_ItemSlot">
          <Anchor point="TOP" relativeTo="$(parent)EquipmentSlotsChest" relativePoint="BOTTOM" offsetY="10" />
        </Button>
        <Button name="$(parent)EquipmentSlotsFoot" inherits="SetManager_ItemSlot">
          <Anchor point="TOP" relativeTo="$(parent)EquipmentSlotsBelt" relativePoint="BOTTOM" offsetY="10" />
        </Button>

        <!-- bottom part 1 -->
        <Texture name="$(parent)AccessoriesSection" inherits="ZO_CharacterSheetDivider">
          <Anchor point="TOPLEFT" offsetY="264" />
          <OnInitialized>
            self:GetNamedChild("Text"):SetText(GetString("SI_EQUIPSLOTVISUALCATEGORY", EQUIP_SLOT_VISUAL_CATEGORY_ACCESSORIES))
          </OnInitialized>
        </Texture>

        <Button name="$(parent)EquipmentSlotsNeck" inherits="SetManager_ItemSlot">
          <Anchor point="TOPLEFT" offsetX="10" offsetY="295" />
        </Button>
        <Button name="$(parent)EquipmentSlotsRing1" inherits="SetManager_ItemSlot">
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsNeck" relativePoint="RIGHT" offsetX="4" />
        </Button>
        <Button name="$(parent)EquipmentSlotsRing2" inherits="SetManager_ItemSlot">
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsRing1" relativePoint="RIGHT" offsetX="4" />
        </Button>

        <!-- bottom part 2 -->
        <Texture name="$(parent)WeaponsSection" inherits="ZO_CharacterSheetDivider">
          <Anchor point="TOPLEFT" offsetY="350" />
          <OnInitialized>
            self:GetNamedChild("Text"):SetText(GetString("SI_EQUIPSLOTVISUALCATEGORY", EQUIP_SLOT_VISUAL_CATEGORY_WEAPONS))
          </OnInitialized>
        </Texture>

        <Button name="$(parent)EquipmentSlotsMainHand" inherits="SetManager_ItemSlot">
          <Anchor point="TOPLEFT" offsetX="10" offsetY="382" />
        </Button>
        <Button name="$(parent)EquipmentSlotsOffHand" inherits="SetManager_ItemSlot" >
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsMainHand" relativePoint="RIGHT" offsetX="10" />
        </Button>
        <!--<Button name="$(parent)EquipmentSlotsPoison" inherits="ZO_InventoryWeaponSlot" >
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsOffHand" relativePoint="RIGHT" offsetX="10" />
          <Controls>
            <Label name="$(parent)StackCount" override="true">
              <Anchor point="BOTTOMRIGHT" offsetX="-4" offsetY="2" />
            </Label>
          </Controls>
        </Button>-->
        <Button name="$(parent)EquipmentSlotsBackupMain" inherits="SetManager_ItemSlot">
          <Anchor point="TOPLEFT" relativeTo="$(parent)EquipmentSlotsMainHand" relativePoint="BOTTOMLEFT" offsetY="4" />
        </Button>
        <Button name="$(parent)EquipmentSlotsBackupOff" inherits="SetManager_ItemSlot">
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsBackupMain" relativePoint="RIGHT" offsetX="10" />
        </Button>
        <!--<Button name="$(parent)EquipmentSlotsBackupPoison" inherits="ZO_InventoryWeaponSlot" >
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsBackupOff" relativePoint="RIGHT" offsetX="10" />
          <Controls>
            <Label name="$(parent)StackCount" override="true">
              <Anchor point="BOTTOMRIGHT" offsetX="-4" offsetY="2" />
            </Label>
          </Controls>
        </Button>-->

        <!--<Button name="$(parent)WeaponSwap" inherits="ZO_WeaponSwapLeft">
          <Anchor point="LEFT" relativeTo="$(parent)EquipmentSlotsPoison" relativePoint="BOTTOMRIGHT" offsetX="3" />
        </Button>-->
      </Controls>
    </Control>
    <Control name="SetManager_Character_Template_Editable" inherits="SetManager_Character_Template" virtual="true">
      <OnInitialized>
        SET_MANAGER:InitializeEditableSlots(self)
      </OnInitialized>
      <Controls>
        <EditBox name="$(parent)Name" inherits="ZO_DefaultEditForDarkBackdrop" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL" maxInputCharacters="64">
          <Dimensions x="160" y="24"/>
          <Anchor point="TOPLEFT"  relativeTo="$(parent)EquipmentSlotsBackupMain" relativePoint="BOTTOMLEFT" offsetY="4"/>
          <Controls>
            <Label name="$(parent)Instructions" font="ZoFontWinH3" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_DISABLED" text="Enter Name">
              <AnchorFill />

              <OnInitialized>
                local anim = ZO_AlphaAnimation:New(self)
                anim:PingPong(1, 0.4, 1000, LOOP_INDEFINITELY)
              </OnInitialized>
            </Label>
          </Controls>
        </EditBox>
      </Controls>
    </Control>
    <Control name="SetManagerItemListRow" virtual="true" mouseEnabled="true">
      <Dimensions x="300" y="48" />
      <Controls>
        <Texture name="$(parent)Highlight" textureFile="EsoUI/Art/Miscellaneous/listItem_highlight.dds" alpha="0">
          <AnchorFill />
          <TextureCoords left="0" right="1" top="0" bottom=".625" />
        </Texture>

        <Texture name="$(parent)Texture" level="3">
          <Anchor point="TOPLEFT" offsetX="10" offsetY="4" />
          <Dimensions x="40" y="40"/>
          <Controls>
            <!--<Texture name="$(parent)BG" textureFile="EsoUI/Art/Achievements/achievements_iconBG.dds" level="2">
              <AnchorFill />
            </Texture>-->
            <!--<Texture name="$(parent)Frame" textureFile="EsoUI/Art/ActionBar/abilityFrame64_up.dds" layer="CONTROLS">
              <AnchorFill />
            </Texture>-->
          </Controls>
        </Texture>

        <Label name="$(parent)Name" font="ZoFontWinH4" wrapMode="ELLIPSIS" verticalAlignment="CENTER" horizontalAlignment="LEFT">
          <Anchor point="TOPLEFT" relativeTo="$(parent)Texture" relativePoint="TOPRIGHT" offsetX="5" offsetY="0"/>
          <Anchor point="BOTTOMRIGHT" relativeTo="$(parent)" relativePoint="BOTTOMRIGHT" offsetX="-5" offsetY="0"/>
        </Label>
      </Controls>
    </Control>

    <Button name="SetManagerSetsListRow" virtual="true" mouseEnabled="true">
      <Dimensions x="300" y="48" />
      <Controls>
        <Texture name="$(parent)Highlight" textureFile="EsoUI/Art/Miscellaneous/listItem_highlight.dds" alpha="0">
          <AnchorFill />
          <TextureCoords left="0" right="1" top="0" bottom=".625" />
        </Texture>

        <Texture name="$(parent)Texture" level="3">
          <Anchor point="TOPLEFT" offsetX="10" offsetY="4" />
          <Dimensions x="40" y="40"/>
          <!--<Controls>
            <Texture name="$(parent)BG" textureFile="EsoUI/Art/Achievements/achievements_iconBG.dds" level="2">
              <AnchorFill />
            </Texture>
            <Texture name="$(parent)Frame" textureFile="EsoUI/Art/ActionBar/abilityFrame64_up.dds" layer="CONTROLS">
              <AnchorFill />
            </Texture>
          </Controls>-->
        </Texture>

        <Label name="$(parent)Name" font="ZoFontWinH4" wrapMode="ELLIPSIS" verticalAlignment="CENTER" horizontalAlignment="LEFT" color="INTERFACE_COLOR_TYPE_TEXT_COLORS:INTERFACE_TEXT_COLOR_NORMAL">
          <Dimensions y="48"/>
          <Anchor point="TOPLEFT" relativeTo="$(parent)Texture" relativePoint="TOPRIGHT" offsetX="4" offsetY="-4"/>
          <Anchor point="TOPRIGHT" relativeTo="$(parent)" relativePoint="TOPRIGHT" offsetX="-4" offsetY="0"/>
        </Label>
      </Controls>
    </Button>

    <TopLevelControl name="SetManagerTopLevel" mouseEnabled="true" hidden="true" allowBringToTop="false">
      <Anchor point="TOPLEFT" relativeTo="ZO_SharedWideRightBackground" offsetY="20" />
      <Anchor point="BOTTOMRIGHT" relativeTo="ZO_SharedWideRightBackground" offsetY="-30" />

      <Controls>
        <Control name="$(parent)SetsList" inherits="ZO_ScrollList">
          <Dimensions x="343"/>
          <Anchor point="TOPLEFT" offsetX="0" offsetY="24" />
          <Anchor point="BOTTOMLEFT" offsetX="0" offsetY="-24" />
        </Control>
        <Control name="$(parent)SetTemplate" >
          <Dimensions x="273" />
          <Anchor point="TOPLEFT" relativeTo="$(parent)SetsList" relativePoint="TOPRIGHT" offsetX="48" />
          <Anchor point="BOTTOMLEFT" relativeTo="$(parent)SetsList" relativePoint="BOTTOMRIGHT" offsetX="48" />

          <Controls>
            <Control name="$(parent)List" inherits="ZO_HorizontalScrollListTemplate">
              <Dimensions x="273" y="532" />
              <Anchor point="CENTER" />
            </Control>
          </Controls>
        </Control>
        <Control name="$(parent)ItemList" inherits="ZO_ScrollList">
          <Dimensions x="343"/>
          <Anchor point="TOPLEFT" relativeTo="$(parent)SetTemplate" relativePoint="TOPRIGHT" offsetX="48" />
          <Anchor point="BOTTOMLEFT" relativeTo="$(parent)SetTemplate" relativePoint="BOTTOMRIGHT" offsetX="48" />
        </Control>
      </Controls>
    </TopLevelControl>
  </Controls>

</GuiXml>